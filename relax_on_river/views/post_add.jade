extends layout

block content
  div.post
   if !edit
      form(action='/post-add', method='post', enctype='multipart/form-data')
         p Name
            input(name="name", type='text')
         p Description
            textarea(name='description', rows='10', cols='40')
         p Image
            input(name='image', type='file')
         p
            input(type='submit')
   else
      form(action='/post-edit/'+post._id, method='post', enctype='multipart/form-data')
         p Name
            input(name="name", type='text' value=post.name)
         p Description
            textarea(name='description', rows='10', cols='40')=post.description
         p Image
            input(name='image', type='file')
         p
            input(type='submit')
